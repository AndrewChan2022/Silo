    ../$TOPSRCDIR/configure \
    CFLAGS=-fPIC CXXFLAGS=-fPIC \
    CC=gcc CXX=g++ \
    FC=g77 F77=g77 \
    FFLAGS=-Wno-globals F77FLAGS=-Wno-globals FCFLAGS=-Wno-globals \
    --prefix=$LCTOPDIR/$VERSION/chaos_3_x86_64-gcc \
    --disable-browser --disable-silex --without-hdf5 --without-szlib 
    make -j 4
    make install
    make distclean
    ../$TOPSRCDIR/configure \
    CFLAGS=-fPIC CXXFLAGS=-fPIC \
    CC=gcc CXX=g++ \
    FC=g77 F77=g77 \
    FFLAGS=-Wno-globals F77FLAGS=-Wno-globals FCFLAGS=-Wno-globals \
