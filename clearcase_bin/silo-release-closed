    cd $LCTOPDIR/$VERSION/test
    umask 002
    PATH=usr/local/intel/compiler91/bin:/usr/local/bin:/bin:/usr/bin:/usr/bin/X11:/usr/lib/mpi/bin:/usr/apps/bin:/usr/gapps/bin
    export PATH
    rm -rf chaos_3_x86_64_ib
    mkdir chaos_3_x86_64_ib
