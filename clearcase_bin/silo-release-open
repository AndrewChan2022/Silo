    export PATH OBJECT_MODE
    rm -rf aix_5_ll-gcc
    mkdir aix_5_ll-gcc
    cd aix_5_ll-gcc
    ../$TOPSRCDIR/configure \
    CFLAGS=-mminimal-toc CXXFLAGS=-mminimal-toc \
    CC=gcc CXX=g++ FC=g77 F77=g77 \
