##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

##
## Files...
##
SRC=api.c ent.c netcdf.c obj.c silo_netcdf.c table.c
OBJ=$(SRC:.c=.o)
LIB=$(tmplib)/libsilo.a
PRIVATE_HDR=silo_netcdf_private.h table.h
NOT_DISTRIB= Makefile.options

.PRECIOUS: $(LIB)

##
## Standard targets...
##
all: $(LIB)

install: $(libdir)/libsilo.a

clean:
	-$(AR) d $(LIB) $(OBJ)
	$(RM) $(OBJ)
	$(RM) .depend

##
## Other targets...
##
$(libdir)/libsilo.a: $(LIB)
	$(INSTALL_DATA) $(LIB) $@

##
## Automatic dependency stuff
##
@TARGETS@
